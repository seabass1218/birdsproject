<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/header', {title: 'Birds'}); %>
</head>

<body>
  <% include ../partials/navbar %>

  <div class="container">
    <h1>Animals</h1>

    <a href="/create" class="btn btn-primary">+ Create Animal</a>

    <table id="animalTable" class="table table-bordered table-striped">

      <thead>
        <tr>
          <td>Species</td>
          <td>Nickname</td>
          <td>Enabled</td>
          <td>Actions</td>
        </tr>
      </thead>

      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%=data[i].species%></td>
        <td><%=data[i].nickName%></td>
        <td><%=data[i].enabled%></td>
        <td><a href="/update?id=<%= data[i]._id %>">Update</a> |
          <a href="/delete?id=<%= data[i]._id %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a></td>
      </tr>
      <% } %>
    </table>

  </div>

  <% include ../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#animalTable').DataTable({
        responsive: true
      });
    });
  </script>

</body>

</html>